@{
    ViewData["Title"] = "Queue";
}

<link rel="stylesheet" href="~/css/Queue/QueueMedia.css" asp-append-version="true" />

@section Scripts {
<script type="text/javascript">

function disconnect()
{
    $.ajax({
    type:"POST",
    url: "@Url.Action("Disconnect")",
    dataType: "action",
    success: function(result){
    console.log(result);
    },
    error: function(request, status, error){
    console.log(status);
    },
    });
}

window.onunload = disconnect;
</script>

<script type="text/javascript">
    document.onload = proveAuth();

    function proveAuth()
    {
            $.ajax({
    type:"POST",
    url: "@Url.Action("ProveAuth")",
    dataType: "action",
    success: function(result){
    console.log(result);
    },
    error: function(request, status, error){
    console.log(status);
    },
    });
    }
</script>
}

<section class="d-flex flex-column justify-content-center align-items-center">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <h2>Уровень: 0</h2>
            <h2>Номер в очереди: 10</h2>
            <h2>Время ожидания: 1:49 минут</h2>
            <img src="/images/tutorial.png" alt="Tutorial"/>
            <button class="light-button" onclick="location.href='@Url.Action("Index", "Game", new { })'">Выйти</button>
        </div>
      </div>
    </div>
</section>


