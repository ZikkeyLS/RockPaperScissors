                <img class="circle" src="/images/RawCirclesNamed/Hands_710_05.png" onclick="location.href='@Url.Action("Status", "Game", new { })'" alt="ChoiceE"/>
                <img class="circle" src="/images/RawCirclesNamed/Hands_710_06.png" onclick="location.href='@Url.Action("Status", "Game", new { })'" alt="ChoiceF"/>
                <img class="circle" src="/images/RawCirclesNamed/Hands_710_07.png" onclick="location.href='@Url.Action("Status", "Game", new { })'" alt="ChoiceG"/>
