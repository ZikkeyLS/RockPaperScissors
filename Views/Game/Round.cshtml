@{
    ViewData["Title"] = "Round";
}

<link rel="stylesheet" href="~/css/Round/RoundMedia.css" asp-append-version="true" />

@section Scripts {
    <script src=~/js/ajaxRequests.js type="text/javascript"></script>
    <script type="text/javascript">
        window.onunload = function() { ajaxRequest("@Url.Action("Disconnect")"); };
        window.onload = function() { ajaxRequest("@Url.Action("ProveAuth")"); };
    </script>
}

