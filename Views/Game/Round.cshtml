@{
    ViewData["Title"] = "Round";
}

<link rel="stylesheet" href="~/css/Round/RoundMedia.css" asp-append-version="true" />

@section Scripts {
    <script src=~/js/ajaxRequests.js type="text/javascript"></script>
    <script type="text/javascript">
        window.onload = function() { 
            proveAuth("@Url.Action("ProveAuth")"); 
            roundDataRequest("@Url.Action("RoundDataRequest")", document.getElementById("roundText"), document.getElementById("scoreText"), document.getElementById("leftTimeText"))

            setInterval(() => hearthbeat("@Url.Action("Hearthbeat")"), 1000);
            setInterval(() => roundDataRequest("@Url.Action("RoundDataRequest")", document.getElementById("roundText"), document.getElementById("scoreText"), document.getElementById("leftTimeText")), 1000);

            document.getElementById("input-0").onclick = function() { sendInput("@Url.Action("SendInput")", 0); };
            document.getElementById("input-1").onclick = function() { sendInput("@Url.Action("SendInput")", 1); };
            document.getElementById("input-2").onclick = function() { sendInput("@Url.Action("SendInput")", 2); };
            document.getElementById("input-3").onclick = function() { sendInput("@Url.Action("SendInput")", 3); };
            document.getElementById("input-4").onclick = function() { sendInput("@Url.Action("SendInput")", 4); };
            document.getElementById("input-5").onclick = function() { sendInput("@Url.Action("SendInput")", 5); };
            document.getElementById("input-6").onclick = function() { sendInput("@Url.Action("SendInput")", 6); };
        };
    </script>
}


<section class="d-flex flex-column justify-content-center align-items-center">
        <div class="container col-lg-6 text-center">
            <h2 id="roundText">Раунд: 0-1</h2>
            <h2 id="scoreText">Взнос: 0 баллов</h2>
            <h2 id="leftTimeText">Осталось: 0 секунд </h2>
            <div class="pictures-container">    
                <img id="input-0" class="circle" src="/images/RawCirclesNamed/Hands_710_01.png" alt="ChoiceA"/>
                <img id="input-1" class="circle" src="/images/RawCirclesNamed/Hands_710_02.png" alt="ChoiceB"/>
                <img id="input-2" class="circle" src="/images/RawCirclesNamed/Hands_710_03.png" alt="ChoiceC"/>
                <img id="input-3" class="circle" src="/images/RawCirclesNamed/Hands_710_04.png" alt="ChoiceD"/>
                <img id="input-4" class="circle" src="/images/RawCirclesNamed/Hands_710_05.png" alt="ChoiceE"/>
                <img id="input-5" class="circle" src="/images/RawCirclesNamed/Hands_710_06.png" alt="ChoiceF"/>
                <img id="input-6" class="circle" src="/images/RawCirclesNamed/Hands_710_07.png" alt="ChoiceG"/>
            </div>
        </div>
</section>


