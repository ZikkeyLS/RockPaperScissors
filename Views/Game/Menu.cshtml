@{
    ViewData["Title"] = "GameMenu";
}

<link rel="stylesheet" href="~/css/GameIndex/GameIndexMedia.css" asp-append-version="true" />

@section Scripts {
    <script src=~/js/ajaxRequests.js type="text/javascript"></script>
    <script type="text/javascript">
        window.onload = function() { 
            proveAuth("@Url.Action("ProveAuth")");
            getMenuPageStatus("@Url.Action("GetMenuPageStatus")", document.getElementById("scoreText"), document.getElementById("gamesText"));

            setInterval(() => hearthbeat("@Url.Action("Hearthbeat")"), 1000);
        };
    </script>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <h5 id="scoreText" class="game-index-text">0 баллов</h5>
            <h5 id="gamesText" class="game-index-text">0 игр сыграно</h5>
            <button id="free-play-button" class="light-button" onclick="location.href='@Url.Action("PlayFree", "Game", new { })'">Свободная игра</button>
            <button id="play-button" class="light-button" onclick="location.href='@Url.Action("LevelSelector", "Game", new { })'">Играть</button>
        </div>
    </div>
</div>
